            </Label.GestureRecognizers>
        </Label>

        <!-- Link 5 -->
        <Label Text="Icon by Freepik (Camera)"
               TextColor="Blue"
               FontSize="14"
               HorizontalOptions="Start">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding OpenLinkCommand}" 
