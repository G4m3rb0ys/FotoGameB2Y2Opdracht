<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FotoGameB2Y2Opdracht.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FotoGameB2Y2Opdracht"
    xmlns:views="clr-namespace:FotoGameB2Y2Opdracht.MVVM.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="FotoGameB2Y2Opdracht">

    <ShellContent
        Title="login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title="register"
        ContentTemplate="{DataTemplate views:RegisterPage}"
        Route="RegisterPage" />
    <ShellContent Title="Forgot Password"
                  ContentTemplate="{DataTemplate views:ForgotPasswordPage}"
                  Route="ForgotPasswordPage" />
    <ShellContent Title="Main"
                  ContentTemplate="{DataTemplate views:MainPage}"
                  Route="MainPage" />
    <ShellContent Title="Tasks"
                  ContentTemplate="{DataTemplate views:TasksPage}"
                  Route="TasksPage" />
    <ShellContent Title="Task"
                  ContentTemplate="{DataTemplate views:TaskPage}"
                  Route="TaskPage" />
    <ShellContent Title="CreateTaskPage"
                  ContentTemplate="{DataTemplate views:CreateTaskPage}"
                  Route="CreateTaskPage" />
    <ShellContent Title="Claims"
                  ContentTemplate="{DataTemplate views:ClaimsPage}"
                  Route="ClaimsPage" />
    <ShellContent Title="ClaimDetailsPage"
                  ContentTemplate="{DataTemplate views:ClaimDetailsPage}"
                  Route="ClaimDetailsPage" />
    <ShellContent Title="ProfilePage"
                  ContentTemplate="{DataTemplate views:ProfilePage}"
                  Route="ProfilePage" />
    <ShellContent Title="Shop"
                  ContentTemplate="{DataTemplate views:InspirationPage}"
                  Route="ShopPage" />

</Shell>
