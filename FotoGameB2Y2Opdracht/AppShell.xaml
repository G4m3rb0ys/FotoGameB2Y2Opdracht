<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FotoGameB2Y2Opdracht.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FotoGameB2Y2Opdracht"
    Shell.FlyoutBehavior="Flyout"
    Title="FotoGameB2Y2Opdracht">

    <ShellContent
        Title="login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title="register"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />
    <ShellContent Title="Forgot Password"
                  ContentTemplate="{DataTemplate local:ForgotPasswordPage}"
                  Route="ForgotPasswordPage" />
    <ShellContent Title="Main"
                  ContentTemplate="{DataTemplate local:MainPage}"
                  Route="MainPage" />
    <ShellContent Title="Tasks"
                  ContentTemplate="{DataTemplate local:TasksPage}"
                  Route="TasksPage" />

</Shell>
