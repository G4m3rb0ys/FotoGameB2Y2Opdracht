<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FotoGameB2Y2Opdracht.MVVM.Views.LoginPage"
             Title="Login">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Login" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="UsernameEntry" Placeholder="admin" />
        <Entry x:Name="PasswordEntry" Placeholder="password123" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginButtonClicked" />

        <Label x:Name="ErrorMessageLabel" TextColor="Red" IsVisible="False" />

        <Button Text="Register" Clicked="OnRegisterButtonClicked" />

        <Button Text="Forgot Password?"
        Clicked="OnForgotPasswordClicked"
        BackgroundColor="Transparent"
        TextColor="White"
        FontSize="14"
        Padding="0"
        HorizontalOptions="Center" />

        <Button Text="Continue as Guest" Clicked="OnSkipButtonClicked"></Button>

    </VerticalStackLayout>
</ContentPage>
